        "files": {
            "parser": "file",
            "find": {
                "BOT_TOKEN": "BOT_TOKEN=",
                "ADMIN_ID": "ADMIN_ID="
            }
        },
        "startup": {
            "done": "Bot 已启动"
        },
        "logs": {},
        "stop": "^^C"
